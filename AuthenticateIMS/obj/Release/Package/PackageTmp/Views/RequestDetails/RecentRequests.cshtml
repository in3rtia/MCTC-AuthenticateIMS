                            <th>
                                @Html.DisplayNameFor(model => model.requesterSurname)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.date_of_request)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.status)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.request_ID)
