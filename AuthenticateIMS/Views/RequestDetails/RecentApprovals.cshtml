@model IEnumerable<AuthenticateIMS.Models.Request_Details>

@{
    ViewBag.Title = "Recent Approvals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        @ViewBag.Category
        <h1>
            Recent Approvals
            <small></small>
        </h1>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Dashboard</a></li>
        <li class="active"></li>
    </ol>
</section>
<br />
<div class="row">
    <div class="col-xs-12">
        <div class="box" style="border-top-color: #3c8dbc">
            <div class="box-header">
                <h3 class="box-title"></h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body" style="overflow-x: scroll">
                <table id="example2" class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Request ID</th>
                            <th>Item Name</th>
                            <th>Compartment</th>
                            <th>Purpose of Item</th>
                            <th>Quantity</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.request_ID</td>
                                <td>@item.Stock_Details.description_of_items</td>
                                <td>@item.compartment_ID</td>
                                <td>@item.purpose_of_item</td>
                                <td>@item.quantity @item.Stock_Details.unit_of_issue</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
