@model IEnumerable<AuthenticateIMS.Models.getAllRequests_Result>

@{
    ViewBag.Title = "Recent Requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        @ViewBag.Category 
        <h1>
            Recent Requests
            <small></small>
        </h1>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Dashboard</a></li>
        <li class="active">View</li>
    </ol>
</section>
<br />

<div class="row">
    <div class="col-xs-12">
        <div class="box" style="border-top-color: #3c8dbc">
            <div class="box-header">
                <h3 class="box-title"></h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body" style="overflow-x: scroll">
                <table id="example2" class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Request ID</th>
                            <th>Item Name</th>
                            <th>Quantity</th>
                            <th>Purpose of Item</th>
                            <th>Requester</th>
                            <th>Date of Request</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.request_ID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.description_of_items)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.quantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.purpose_of_item)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.requesterFirstName) @Html.DisplayFor(modelItem => item.requesterSurname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.date_of_request)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.status)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->