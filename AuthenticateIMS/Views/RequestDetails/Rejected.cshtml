@model IEnumerable<AuthenticateIMS.Models.getAllApprovedORDeniedRequests_Result>

@{
    ViewBag.Title = "Rejected requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Rejected Requests
        <small>View</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Dashboard</a></li>
        <li class="active">Rejected requests</li>
    </ol>
</section>
<br />
<div class="row">
    <div class="col-xs-12">
        <div class="box" style="border-top-color: #3c8dbc">
            <div class="box-header">
                <h3 class="box-title"></h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body" style="overflow-x: scroll">
                <table id="example2" class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Request ID</th>
                            <th>No of Items</th>
                            <th>Requested By</th>
                            <th>Request Date</th>
                            <th>Approved by</th>
                            <th>Details</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.request_ID</td>
                                <td>@item.number_of_requests</td>
                                <td>@item.requesterFirstName @item.requesterLastName</td>
                                <td>@Convert.ToDateTime(@item.date_of_request).ToString("MMMM dd, yyyy")</td>
                                <td>@item.approverFirstName @item.approverLastName</td>
                                <td>@Html.ActionLink("View Details", "RejectedRequestsDetails", new { id = @item.request_ID, @class = "btn btn-xs btn-primary" })</td>

                            </tr>
                        }
                    </tbody>

                    <tfoot>
                        <tr></tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->

