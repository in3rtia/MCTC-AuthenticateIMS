
@model IEnumerable<AuthenticateIMS.Models.getAllIssues_Result>

@{
    ViewBag.Title = "Issued stock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Issued Stock
        <small>View</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Dashboard</a></li>
        <li class="active">Issues</li>
    </ol>
</section>
<br />
<div class="row">
    <div class="col-xs-12">
        <div class="box" style="border-top-color: #3c8dbc">
            <div class="box-header">
                <h3 class="box-title"></h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body" style="overflow-x: scroll">
                <table id="example2" class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Request ID</th>
                            <th>No of Items</th>
                            <th>Received By</th>
                            <th>Issued By</th>
                            <th>Details</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.request_ID</td>
                                <td>@item.number_of_requests</td>
                                <td>@item.requesterFirstName @item.requesterLastName</td>
                                <td>@item.issuerFirstName @item.issuerLastName</td>
                                <td>@Html.ActionLink("View Details", "Details", new { id = @item.request_ID })</td>

                            </tr>
                        }
                    </tbody>

                    <tfoot>
                        <tr></tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->

